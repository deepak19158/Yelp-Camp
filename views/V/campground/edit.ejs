<%- layout('../layout/boilerpalte') %>
    <h1>Edit Campground</h1>
    <form action="/campground/<%=camp._id%>/edit?_method=PUT" method="post">
        <label for="title">Title : </label>
        <input type="text" name="title" id="title" value="<%=camp.title %> ">
        <label for="location">Location : </label>
        <input type="location" name="location" id="location" value="<%=camp.location %> ">
        <label for="image">Image : </label>
        <input type="text" name="image" id="image" value="<%=camp.image %> ">
        <label for="price">Price : </label>
        <input type="text" name="price" id="price" value="<%=camp.price %> ">
        <label for="description">Description : </label>
        <input type="text" name="description" id="description" value="<%=camp.description %> ">
        <button>Submit</button>
    </form>